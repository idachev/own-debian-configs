# Software

cleanup_mvn_target_dirs() {
  DOIT=$1
  find . -type d -iname "target" | \
    while read line
    do
      if [ -f "${line}/../pom.xml" ]; then
        if [ "${DOIT}" = "doit" ]; then
          rm -rf "${line}"
        else
          echo "[DRY RUN] rm -rf ${line}"
        fi
      fi
    done
}

mvn() {
  local dir="$PWD"
  while [[ ! -x "${dir}/mvnw" && "${dir}" != / ]]; do
    dir="${dir:h}"
  done

  if [[ -x "${dir}/mvnw" ]]; then
    echo -e "Running \`${dir}/mvnw\`...\n" >&2
    "${dir}/mvnw" -v >&2
    echo '' >&2
    "${dir}/mvnw" "$@"
    return $?
  fi

  command mvn -v >&2
  echo '' >&2
  command mvn "$@"
}

